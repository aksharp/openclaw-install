# ---------------------------------------------------------------------------
# OpenClaw Terraform — copy to terraform.tfvars and set values.
# Do NOT commit terraform.tfvars (contains secrets); add to .gitignore.
# ---------------------------------------------------------------------------

namespace         = "openclaw"
release_name      = "openclaw"
chart_path        = "../helm/openclaw"
openclaw_image_tag = "v1.0.0"
ingress_domain    = "openclaw.local"
tailscale_hostname = "openclaw"

# App secrets (stored in K8s Secret; chart Job pushes to Vault)
gateway_token      = ""   # required: your OpenClaw gateway token
openai_api_key     = ""   # optional
anthropic_api_key  = ""   # optional
signal_account     = ""   # optional: e.g. +1234567890

vault_app_secrets_secret_name = "openclaw-vault-app-secrets"

# Tailscale provider auth (optional)
tailscale_api_key = ""   # or set TAILSCALE_API_KEY env
# tailscale_oauth_client_id     = ""
# tailscale_oauth_client_secret  = ""

# DNS (Cloudflare) — optional; run from terraform/cloudflare/ when needed

# cert-manager (optional)
# cert_manager_issuer_email = "you@example.com"
